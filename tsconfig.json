{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"pretty": true,
		"target": "es6",
		"outDir": "dist",
		"typeRoots": ["./node_modules/@types","./@types"]
	},
	"include": ["./**/*"],
	"exclude": [
		"node_modules/**/*",
		"test"
	]
}
